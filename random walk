from random import choice
import random


# initialize the grid

grid_size = 21 

# create my variables

moves = [-1,1]
t = 0
# place the drunk man at the middle of the grid

M = grid_size // 2

# range a loop until he reaches a wall

for i in range(100):
    t = t + 1
    if 1 < M < 21:
        dM = random.choice(moves)
        M += dM
        L = (grid_size - 1) - M
        print ('start| ' + '_ '*M + 'o ' + '_ '*L + '|end', t)
    else:
        print ('Mumber of steps to reach a wall:', t )
        break
